{
  "manifest_version": 3,
  "name": "JiraLinky",
  "version": "1.0",
  "description": "Copies the page's title and source to the clipboard when the extension icon is clicked.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Copy Jira Link",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}